<div class="min-h-screen bg-white flex">
  <div class="flex-1 flex flex-col justify-center py-12 px-4 sm:px-6 lg:flex-none lg:px-20 xl:px-24"></div>
<form style="padding: 20px;" action="/dog/book" method="POST">
  <h2>Book a Date with a Dog</h2>
  <br>
  <div class="form-group">
    <label class="mr-sm-2" for="type">Type of Dog: </label>
    <select class="custom-select mb-2 mr-sm-2 mb-sm-0" id="book" name="book" required>
      <option value="" disabled selected hidden>Choose a type of dog</option>
      {{#each books}}
        {{#if this.available}}
          <option value="{{this.id}}">{{this.id}}</option>
        {{/if}}
      {{/each}}
    </select>
    <p class="validate" id="dog-validate" style="display:none;">Please select a type of dog.</p>
  </div>
  <div class="form-group">
    <label class="mr-sm-2" for="firstname">First Name:</label>
    <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="firstname" name="firstname" placeholder="First Name">
    <p class="validate" id="firstname-validate" style="display:none;">Please enter your first name.</p>
  </div>
  <div class="form-group">
    <label class="mr-sm-2" for="lastname">Last Name:</label>
    <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="lastname" name="lastname" placeholder="Last Name">
    <p class="validate" id="lastname-validate" style="display:none;">Please enter your last name.</p>
  </div>
  <div class="form-group">
    <label class="mr-sm-2" for="phone">Phone Number:</label>
    <input type="tel" class="form-control mb-2 mr-sm-2 mb-sm-0" id="phone" name="phone" placeholder="Phone Number">
    <p class="validate" id="phone-validate" style="display:none;">Please enter your phone number.</p>
  </div>
  <div class="form-group">
    <label class="mr-sm-2" for="email">Email:</label>
    <input type="email" class="form-control mb-2 mr-sm-2 mb-sm-0" id="email" name="email" placeholder="Email">
    <p class="validate" id="email-validate" style="display:none;">Please enter your email.</p>
  </div>
  <div class="form-group">
    <label class="mr-sm-2" for="booking">Booking Date: </label>
    <input type="date" class="form-control mb-2 mr-sm-2 mb-sm-0" id="booking" name="booking">
    <p class="validate" id="booking-validate" style="display:none;">Please select the day you will booking.</p>
  </div>
  <div class="form-group">
    <label class="mr-sm-2" for="return">Return Date: </label>
    <input type="date" class="form-control mb-2 mr-sm-2 mb-sm-0" id="return" name="return">
    <p class="validate" id="return-validate" style="display:none;">Please select the day you will return the dog.</p>
  </div>
  <button type="submit" id="type-dog" class="btn btn-big btn-secondary btn-lg" onClick="return empty()">Book</button>
</form>

<div>
  <form action="/" method="GET">
    <button type="submit" id="go-back" class="btn btn-med btn-secondary btn-lg" style="margin-bottom:10px; margin-left:30px;">Back to Home</button>
  </form>
</div>
</div>

<script>
  // Prevent empty input
  function empty() {
    var dog = $("#typedog").val();
    var firstname = $("#firstname").val();
    var lastname = $("#lastname").val();
    var phone = $("#phone").val();
    var email = $("#email").val();
    var bookin = $("#booking").val();
    var return = $("#return").val();
    var validate = true;
    if (!email) {
      $("#email-validate").show();
      validate = false;
    }
    else if (email) {
      $("#email-validate").hide();
    }
    if (!firstname) {
      $("#firstname-validate").show();
      validate = false;
    }
    else if (firstname) {
      $("#firstname-validate").hide();
    }
    if (!lastname) {
      $("#lastname-validate").show();
      validate = false;
    }
    else if (lastname) {
      $("#lastname-validate").hide();
    }
    if (!phone) {
      $("#phone-validate").show();
      validate = false;
    }
    else if (phone) {
      $("#phone-validate").hide();
    }
    if (!bookin) {
      $("#bookin-validate").show();
      validate = false;
    }
    else if (bookin) {
      $("#bookin-validate").hide();
    }
    if (!return) {
      $("#return-validate").show();
      validate = false;
    }
    else if (return) {
      $("#checkout-validate").hide();
    }
    if (!typedog) {
      $("#dog-validate").show();
      validate = false;
    }
    else if (typedog) {
      $("#dog-validate").hide();
    }
    return validate;
  }
</script>